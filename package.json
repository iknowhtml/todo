{
  "name": "todo-application",
  "workspaces": [
    "client/*",
    "server/*"
  ],
  "scripts": {
    "start": "skaffold dev",
    "lerna": "lerna",
    "version": "lerna version --conventional-commits --yes",
    "tag": "lerna run tag",
    "package": "lerna run package --since $PREVIOUS_TAG",
    "push": "lerna run push --since $PREVIOUS_TAG",
    "deploy": "helm upgrade todo --namespace todo --set server.graphql.deployment.image.tag=$TODO_GRAPHQL_TAG"
  },
  "devDependencies": {
    "lerna": "^3.19.0"
  }
}